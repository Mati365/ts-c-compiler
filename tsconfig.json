{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2021",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "baseUrl": "./",
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/**/*"],
}
