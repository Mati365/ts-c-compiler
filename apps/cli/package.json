{
  "name": "@ts-c-compiler/cli",
  "version": "1.0.1",
  "private": false,
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npx webpack --config=webpack.config.js",
    "dev": "NODE_ENV=development yarn run build",
    "build:production": "NODE_ENV=production yarn run build",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --passWithNoTests --c ./jest.config.mjs",
    "lint": "npx eslint src/ -c ./.eslintrc.yml",
    "publish": "yarn build:production && npx changeset && npx changeset version && npx changeset publish"
  },
  "devDependencies": {
    "@ts-c-compiler/compiler": "*"
  },
  "bin": {
    "ts-c": "dist/bin/cli.js"
  },
  "publishConfig": {
    "access": "public"
  }
}
